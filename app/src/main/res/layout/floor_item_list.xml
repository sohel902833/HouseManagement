<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="25dp"
    app:cardElevation="25dp"
    android:layout_marginBottom="15dp"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/floorList_FloorNameTextviewid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="Floor Name"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/floorList_dueBalanceTextviewid"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textAlignment="textEnd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="180tk"
            android:textColor="#000"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:id="@+id/floorList_AlotedTextviewid"
            android:layout_below="@+id/floorList_FloorNameTextviewid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Alloted to "
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/floorList_EditButtonid"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_below="@+id/floorList_AlotedTextviewid"
            android:layout_marginTop="5dp"
            android:text="Edit"
            android:textAllCaps="false"
            android:textColor="#fff"
            />
        <Button
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/floorList_EditButtonid"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_below="@+id/floorList_AlotedTextviewid"
            android:layout_marginTop="5dp"
            android:text="Payment"
            android:id="@+id/floor_ListPaymentButtonid"
            android:textAllCaps="false"
            android:textColor="#fff"
            />



    </RelativeLayout>


</androidx.cardview.widget.CardView>