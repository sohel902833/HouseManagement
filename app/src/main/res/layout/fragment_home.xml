<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="#fff"
    tools:context=".User.ui.home.HomeFragment">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">



        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardViewid"
            app:cardBackgroundColor="#fff"
            app:cardElevation="15dp"
            app:cardCornerRadius="15dp"
            android:padding="15dp"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="30dp"
                >
                <TextView
                    android:id="@+id/f_home_DateTextviewid"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="#000"
                    android:text="05/03/2002"
                    android:textSize="25sp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                   />

                <LinearLayout
                    android:id="@+id/home_lin1"
                    android:layout_centerInParent="true"
                    android:padding="15dp"
                    android:background="@drawable/input"
                    android:layout_marginTop="15dp"
                    android:layout_below="@+id/f_home_DateTextviewid"
                    android:weightSum="2"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">
                        <TextView
                            android:id="@+id/f_Home_TotalRentAmountTextviewid"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:text="Total Rent Amount"
                            android:textColor="#000"
                            />
                        <TextView
                            android:id="@+id/f_Home_TotalRentBalance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="22sp"
                            android:textStyle="bold"
                            android:text="0"
                            android:textColor="#000"

                            />
                    </LinearLayout>


                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/f_Home_TotalDueTextviewid"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:text="Due Left"
                                android:textColor="#000"
                                />
                            <TextView
                                android:id="@+id/f_Home_TotalDueBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:text="0"
                                android:textColor="#ff22"

                                />
                        </LinearLayout>
                        <LinearLayout
                            android:gravity="center"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">
                            <TextView
                                android:id="@+id/f_Home_TotalGetTextview"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:text="Get Balanced"
                                android:textColor="#000"
                                />

                            <TextView
                                android:id="@+id/f_Home_TotalGetBalance"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:text="0"
                                android:textColor="#035C07"
                                />


                        </LinearLayout>




                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/moreDetailsTextviewid"
                    android:layout_below="@+id/home_lin1"
                    android:padding="15dp"
                    android:textColor="#ff22"
                    android:textStyle="bold"
                    android:text="Tap for More Details"
                    />


            </RelativeLayout>
        </androidx.cardview.widget.CardView>
        <Button

            android:layout_below="@+id/cardViewid"
            android:layout_marginTop="40dp"
            android:id="@+id/f_home_paymentEditButton"
            android:textAllCaps="false"
            android:textColor="#fff"
           android:text="Payment And Edit"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            />
        <Button
            android:layout_marginTop="15dp"
            android:layout_below="@+id/f_home_paymentEditButton"
            android:id="@+id/f_home_moreHomeCreateButton"
            android:textAllCaps="false"
            android:textColor="#fff"
           android:text="More Home Create"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            />
        <TextView
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:layout_below="@+id/f_home_moreHomeCreateButton"
            android:id="@+id/f_home_UtilitisIndex"
            android:textAllCaps="false"
            android:textColor="#ff22"
           android:text="Utilities Index"
            android:layout_centerInParent="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            />
    </RelativeLayout>



</ScrollView>

</RelativeLayout>