<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    app:cardBackgroundColor="#fff"
    app:cardCornerRadius="15dp"
    app:cardElevation="15dp"
    android:layout_marginBottom="15dp"
    >

    <RelativeLayout
        android:padding="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/renterList_RenterNameTextviewid"
            android:textSize="19sp"
            android:text="Md Sohrab Hossain"
            android:textColor="#000"
            android:textStyle="bold"
            />
           <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/renterList_RenterLiveDetailsTextviewid"
               android:layout_below="@+id/renterList_RenterNameTextviewid"
               android:layout_marginTop="2dp"
               android:textColor="#000"
               android:textSize="17sp"
               android:text="Home:Flower Villa Floor:1"
               />
        <TextView
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:id="@+id/renterList_RenterDueBalanceTextViewid"
               android:layout_below="@+id/renterList_RenterLiveDetailsTextviewid"
               android:layout_marginTop="2dp"
               android:textColor="#ff22"
            android:textStyle="bold"
               android:textSize="22sp"
               android:text="Due: 200"
               />

        <ImageView
            android:id="@+id/renterList_CallButtonid"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/contacts2"

            />

        <Button
            android:id="@+id/renterList_TransectionButtonid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/renterList_RenterDueBalanceTextViewid"
           android:text="Transactions"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:layout_marginTop="10dp"
            />



    </RelativeLayout>
</androidx.cardview.widget.CardView>