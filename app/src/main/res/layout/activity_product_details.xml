<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context=".User.ProductDetailsActivity">

    <include
        layout="@layout/app_ber_layout"
        android:id="@+id/productDescriptionAppBarid"/>

    <ScrollView
        android:layout_below="@+id/productDescriptionAppBarid"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="10dp"
        android:id="@+id/cd_1"
        app:cardElevation="10dp"
        app:cardBackgroundColor="#fff"
        android:layout_below="@+id/productDescriptionAppBarid"
        android:layout_width="match_parent"
        android:layout_height="300dp">
        <ImageView
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/select_image"
            android:id="@+id/cardDescription_ImageViewid"
            />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/ln_1"
        android:gravity="center"
        android:padding="15dp"
       android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:layout_below="@id/cd_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
           android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/productDescriptionPhoneNumberid"
            android:text="01740244739"
            android:textColor="#000"
            android:textStyle="bold"
            android:textSize="24sp"

            />
        <ImageView
           android:layout_width="60dp"
            android:layout_height="60dp"
            android:src="@drawable/contacts2"
            android:id="@+id/productDescriptionCallButtonid"
            />
    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:textColor="#000"
        android:text="Md Sohrab Hossain Sohel"
        android:textStyle="bold"
        android:textSize="19sp"
        android:layout_below="@+id/ln_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productDescriptionProductNameTextviewid"
        />
    <TextView
       android:textColor="#000"
        android:text="Md Sohrab Hossain Sohel"
        android:textSize="19sp"
        android:layout_below="@+id/productDescriptionProductNameTextviewid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/productDescription_ProductDescriptionTextviewid"
        />

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>